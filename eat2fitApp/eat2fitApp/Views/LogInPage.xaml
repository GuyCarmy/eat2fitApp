<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eat2fitApp.Views.LogInPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Name: "/>
                <Entry Text="{Binding Name}" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="Password: "/>
                <Entry Text="{Binding Password}" IsPassword="True" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            <Button Text="Connect" Command="{Binding OnConnectClickedCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>