<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eat2fitApp.Views.AppendFoodPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding FoodList}" SelectedItem="{Binding SelectedFood}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}" Detail="{Binding Details}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Append" Command="{Binding AppendClickedCommand}"/>
            <Button Text="New Food" Command="{Binding NewFoodClickedCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>